{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "clean",
            "type": "shell",
            "command": "cd build && make clean",
            "problemMatcher": []
        },
        {
            "label": "make",
            "type": "shell",
            "command": "mkdir -p build && cd build && cmake .. && make -j",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "silent"
            },
            "problemMatcher": {
                "base": "$gcc",
                "fileLocation": [
                    "autoDetect",
                    "${workspaceFolder}"
                ],
                "pattern": {
                    "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
                    "file": 1,
                    "line": 2,
                    "column": 3,
                    "severity": 4,
                    "message": 5
                }
            }
        },
        {
            "label": "flash",
            "type": "shell",
            "command": "cd build && make flash",
            "problemMatcher": []
        },
        {
            "label": "make HostAPP",
            "type": "shell",
            "command": "cd HostAPP && make",
            "problemMatcher": []
        }
    ]
}